<%= form_for @person do |f| %>
  <p><%= f.label :first_name %></p>
  <p><%= f.text_field :first_name %></p>

  <p><%= f.label :last_name %></p>
  <p><%= f.text_field :last_name %></p>

  <p><%= f.label :age %></p>
  <p><%= f.number_field :age %></p>

  <p><%= f.label :hair_color %></p>
  <p><%= f.text_field :hair_color %></p>

  <p><%= f.label :eye_color %></p>
  <p><%= f.text_field :eye_color %></p>

  <p><%= f.label :gender %></p>
  <p><%= f.text_field :gender %></p>

  <p><%= f.label :alive %></p>
  <p><%= f.check_box :alive%></p>

  <p><%= f.submit %></p>
<% end %>